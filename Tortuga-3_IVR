import turtle
t3 = turtle.Turtle()
t3.speed(1)
t3.color("blue")
t3.goto(-400,-100)
def dibujar_cuadrado():
    for _ in range(4):
        t3.forward(50)
        t3.right(90)
def mover_figura():
    for _ in range(8): 
        dibujar_cuadrado()
        t3.penup()
        t3.forward(70)
        t3.pendown()
    turtle.done()
mover_figura()
